# Environment
NODE_ENV=production

# Server
PORT=3000

# Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql://user:password@localhost:5432/cmms_erp?schema=public"

# JWT - IMPORTANT: Generate strong random secrets!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_BYTE_HEX_STRING
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# CORS - Add your production domains
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=warn

# Optional: Sentry or other error tracking
# SENTRY_DSN=your-sentry-dsn-here
